<div
  class="container text-center mt-2 border shadow-lg p-3 mb-5 bg-body rounded"
>
<div class="border">
  <h1 class="  p-1 m-1 text-uppercase">Bienvenido</h1>
  <h4 class="  p-1 m-1 text-danger"> {{this.username}}</h1>
</div>
  {{!-- <img style="max-width: 150px" src="/uploads/{{this.username}}.jpg" alt=""/> --}}

  <br />
  <a href="/logout" class="btn btn-warning my-2">Cerrar session</a>
  <a href="/cart" class="btn btn-dark my-2">Carrito</a>
  <a href="/chat" class="btn btn-primary my-2">Chatear con soporte</a>

  <h4 class="m-3">Agregar Productos</h4>
  <form method="POST" action="/products" id="addprod">
    <!-- title input -->
    <div class="form-outline mb-4">
      <input
        type="text"
        id="form5Example1"
        class="form-control"
        name="title"
        placeholder="Title"
      />
    </div>
    <!-- thumbnail input -->
    <div class="form-outline mb-4">
      <input
        type="text"
        id="form5Example2"
        class="form-control"
        name="thumbnail"
        placeholder="Thumbnail"
      />
    </div>

    <!-- price input -->
    <div class="form-outline mb-4">
      <input
        type="number"
        name="price"
        placeholder="Price"
        id="form5Example3"
        class="form-control"
      />
    </div>

    <!-- Description input -->
    <div class="form-outline mb-4">
      <input
        type="text"
        name="description"
        placeholder="Description"
        id="form5Example3"
        class="form-control"
      />
    </div>

    <!-- Category input -->
    <div class="form-outline mb-4">
      <input
        type="text"
        name="category"
        placeholder="Category"
        id="form5Example3"
        class="form-control"
      />
    </div>

    <!-- Submit -->
    <button
      type="submit"
      value="add product"
      class="btn btn-dark btn-block mb-4"
    >Agregar</button>
  </form>
</div>

<div class="container-sm border p-4 shadow-lg p-3 mb-5 bg-body rounded">
  <h2 class="text-center">PRODUCTOS</h2>
  <table action="" class="container-sm table-responsive table-success table-striped table-hover text-center">
    <thead class="table-dark fs-6">
      <th>Id</th>
      <th>Title</th>
      <th>Thumbnail</th>
      <th>Price</th>
      <th>Description</th>
      <th>Category</th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      {{#each products}}
              <tr>
          <td>{{_id}}</td>
          <td>{{title}}</td>
          <td><a href="{{thumbnail}}">{{thumbnail}}</a></td>
          <td>${{price}}</td>
          <td>{{description}}</td>
          <td>{{category}}</td>
          <td>
            <form method="POST" action="/cart/{{../this.username}}/{{_id}}">
            </form>
          </td>
          <td>
            <form method="POST" action="/products/{{_id}}">
              <input type="hidden" name="id" value="{{_id}}"/>
              <button
                type="submit"
                class="btn btn-danger btn-block m-2">BORRAR</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
